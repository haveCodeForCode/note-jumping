<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.root.cognition.business.dao.CarUserDao">


    <!--*********************************************************************-->

    <select id="getByEntity" resultType="com.root.cognition.business.entity.CarUser">
        SELECT
        bcu.user_car_id,
        bcu.user_id,
        bcu.car_id,
        bcu.del_flag
        FROM
        business_car_user bcu
        left join business_car bc on bc.car_id = bcu.car_id
        <where>
            bcu.del_flag = #{delFlag}
            AND bc.del_flag = #{delFlag}
            <if test="userCarId != null and userCarId != ''">
                AND bcu.user_car_id = #{userCarId}
            </if>
            <if test="userId != null and userId != ''">
                AND bcu.user_id = #{userId}
            </if>
            <if test="menuId != null and menuId != ''">
                AND bcu.car_id = #{carId}
            </if>
            <if test="carNum !=null and carNum!=''">
                AND bc.car_num = #{carNum}
            </if>
        </where>
    </select>

    <select id="findList" resultType="com.root.cognition.business.entity.CarUser">
        select
        `user_car_id`,`user_id`,`car_id`,`del_flag`
        FROM
        business_car_user
        <where>
            del_flag = #{delFlag}
            <if test="userCarId != null and userCarId != ''">
                AND user_car_id = #{userCarId}
            </if>
            <if test="userId != null and userId != ''">
                AND user_id = #{userId}
            </if>
            <if test="menuId != null and menuId != ''">
                AND car_id = #{carId}
            </if>
        </where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="count" resultType="int">
        select count(*) from sys_role_menu
        <where>
            del_flag = #{delFlag}
            <if test="userCarId != null and userCarId != ''">
                AND user_car_id = #{userCarId}
            </if>
            <if test="userId != null and userId != ''">
                AND user_id = #{userId}
            </if>
            <if test="menuId != null and menuId != ''">
                AND car_id = #{carId}
            </if>
        </where>
    </select>

    <insert id="insert" parameterType="com.root.cognition.business.entity.CarUser">
		insert into business_car_user
		(
		`user_car_id`,
		`user_id`,
		`car_id`,
		`del_flag`
		)
		values
		(
		#{userCarId},
		#{userId},
		#{carId},
		#{delFlag}
		)
	</insert>

    <update id="update" parameterType="com.root.cognition.business.entity.CarUser">
        update business_car_user
        <set>
            <if test="userCarId != null and userCarId != ''">
                user_car_id = #{userCarId}
            </if>
            <if test="userId != null and userId != ''">
                user_id = #{userId}
            </if>
            <if test="menuId != null and menuId != ''">
                car_id = #{carId}
            </if>
            <if test="delFlag !=null and delFlag !=''">
                del_flag = #{delFlag}
            </if>
        </set>
        where user_car_id = #{userCarId}
    </update>

    <delete id="remove">
		delete from business_car_user where role_menu_id = #{value}
	</delete>

    <delete id="batchRemove">
        delete from business_car_user where id in
        <foreach item="id" collection="array" open="(" separator=","
                 close=")">
            #{id}
        </foreach>
    </delete>

</mapper>