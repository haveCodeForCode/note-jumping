<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.root.cognition.system.dao.DeptDao">

	<select id="listAllDept">
        SELECT DISTINCT dept_id FROM sys_user
	</select>


	<select id="listParentDept">
		SELECT DISTINCT parent_id FROM sys_dept
	</select>

	<!--***********************************************************************-->
	<select id="get" resultType="com.root.cognition.system.entity.Dept">
		SELECT
		<include refid="deptColumns"/>
		FROM
		sys_dept a
		WHERE a.dept_id = #{value}
	</select>

	<select id="getByEntity" resultType="com.root.cognition.system.entity.Dept">
		SELECT
		<include refid="deptColumns"/>
		FROM
		sys_dept a
		<where>
			a.del_flag = #{delFlag}
			<if test="id != null and id != ''">
				AND a.dept_id = #{id}
			</if>
			<if test="parentId != null and parentId != ''">
				AND a.parent_id = #{parentId}
			</if>
			<if test="name != null and name != ''">
				AND a.name = #{name}
			</if>
			<if test="orderNum != null and orderNum != ''">
				AND a.order_num = #{orderNum}
			</if>
			<if test="createBy !=null and createBy !=''">
				AND a.create_by = #{createBy}
			</if>
			<if test="createTime !=null">
				AND a.create_time = #{createTime}
			</if>
			<if test="updateBy !=null and updateBy !=''">
				AND a.update_by = #{updateBy}
			</if>
			<if test="updateTime !=null">
				AND a.update_time = #{updateTime}
			</if>
		</where>
	</select>

	<select id="findList" resultType="com.root.cognition.system.entity.Dept">
		SELECT
		<include refid="deptColumns"/>
		FROM sys_dept a
		<where>
			a.del_flag = #{delFlag}
			<if test="id != null and id != ''">
				AND a.dept_id = #{id}
			</if>
			<if test="parentId != null and parentId != ''">
				AND a.parent_id = #{parentId}
			</if>
			<if test="name != null and name != ''">
				AND a.name = #{name}
			</if>
			<if test="orderNum != null and orderNum != ''">
				AND a.order_num = #{orderNum}
			</if>
			<if test="createBy !=null and createBy !=''">
				AND a.create_by = #{createBy}
			</if>
			<if test="createTime !=null">
				AND a.create_time = #{createTime}
			</if>
			<if test="updateBy !=null and updateBy !=''">
				AND a.update_by = #{updateBy}
			</if>
			<if test="updateTime !=null">
				AND a.update_time = #{updateTime}
			</if>
		</where>
		<choose>
			<when test="sort != null and sort.trim() != ''">
				order by ${sort} ${order}
			</when>
			<otherwise>
				order by a.create_time desc
			</otherwise>
		</choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>

	<select id="count" resultType="int">
		SELECT count(*) FROM sys_dept a
		<where>
			a.del_flag = #{delFlag}
			<if test="id != null and id != ''">
				AND a.dept_id = #{id}
			</if>
			<if test="parentId != null and parentId != ''">
				AND a.parent_id = #{parentId}
			</if>
			<if test="name != null and name != ''">
				AND a.name = #{name}
			</if>
			<if test="orderNum != null and orderNum != ''">
				AND a.order_num = #{orderNum}
			</if>
			<if test="createBy !=null and createBy !=''">
				AND a.create_by = #{createBy}
			</if>
			<if test="createTime !=null">
				AND a.create_time = #{createTime}
			</if>
			<if test="updateBy !=null and updateBy !=''">
				AND a.update_by = #{updateBy}
			</if>
			<if test="updateTime !=null">
				AND a.update_time = #{updateTime}
			</if>
		</where>
	</select>

	<insert id="insert" parameterType="com.root.cognition.system.entity.Dept">
		insert into sys_dept
		(
			`dept_id`,
			`parent_id`,
			`name`,
			`order_num`,
			`create_by`,
			`create_time`,
			`update_by`,
			`update_time`,
			`del_flag`
		)
		values
		(
			#{id},
			#{parentId},
			#{name},
			#{orderNum},
			#{createBy},
			#{createTime},
			#{updateBy},
			#{updateTime},
			#{delFlag}
		)
	</insert>

	<update id="update" parameterType="com.root.cognition.system.entity.Dept">
		UPDATE sys_dept
		<set>
			<if test="">

			</if>
			<if test="parentId != null and parentId !=''">
				`parent_id` = #{parentId},
			</if>
			<if test="name != null and name !=''">
				`name` = #{name},
			</if>
			<if test="orderNum != null and orderNum !=''">
				`order_num` = #{orderNum},
			</if>
			<if test="delFlag != null and delFlag !=''">
				`del_flag` = #{delFlag}
			</if>
		</set>
		WHERE dept_id = #{deptId}
	</update>

	<delete id="remove">
	    DELETE FROM sys_dept WHERE dept_id = #{value}
	</delete>

	<delete id="batchRemove">
		DELETE FROM sys_dept WHERE dept_id in
		<foreach item="deptId" collection="array" open="(" separator=","
			close=")">
			#{deptId}
		</foreach>
	</delete>


	<sql id="deptColumns">
		a.dept_id 	AS "id",
		a.parent_id	AS "parentId",
		a.name	  	AS "name",
		a.order_num	AS "orderNum",
		a.create_by	AS "createBy",
		a.create_time AS "createTime",
		a.update_by	AS "updateBy",
		a.update_time AS "updateTime",
		a.del_flag 	AS "delFlag"
	</sql>


</mapper>